<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_weight="0.31"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="292dp"
            android:layout_weight="4.11"
            android:orientation="vertical">


            // Kota add 12/13 2016 from this line

            <Button
                android:id="@+id/buttonS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/buttonL"
                android:layout_alignBottom="@+id/buttonL"
                android:layout_centerHorizontal="true"
                android:enabled="false"
                android:text="Stopdayo" />

            <Button
                android:id="@+id/buttonR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/buttonS"
                android:layout_alignBottom="@+id/buttonS"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:enabled="false"
                android:text="Right"></Button>

            <Button
                android:id="@+id/buttonL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/buttonB"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="12dp"
                android:enabled="false"
                android:text="Left" />

            <Button
                android:id="@+id/buttonB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/buttonS"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/buttonS"
                android:enabled="false"
                android:text="Back" />

            <Button
                android:id="@+id/buttonF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/buttonS"
                android:layout_alignLeft="@+id/buttonS"
                android:layout_alignStart="@+id/buttonS"
                android:layout_marginBottom="12dp"
                android:enabled="false"
                android:text="Forward"></Button>

            <Button
                android:id="@+id/btn_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/buttonF"
                android:layout_below="@+id/listMessage"
                android:padding="12dp"
                android:text="Connect" />

            <Button
                android:id="@+id/button_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/buttonF"
                android:layout_alignStart="@+id/productA"
                android:enabled="true"
                android:text="Check!"></Button>

            <ListView
                android:id="@+id/listMessage"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_above="@+id/button_check"
                android:layout_alignParentEnd="true"></ListView>

            <Button
                android:id="@+id/cancelPC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/cancelPB"
                android:layout_below="@+id/cancelPB"
                android:enabled="true"
                android:text="Cancel C" />

            <Button
                android:id="@+id/cancelPD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/cancelPC"
                android:layout_below="@+id/cancelPC"
                android:enabled="true"
                android:text="Cancel D" />

            <TextView
                android:id="@+id/listPA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/cancelPB"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/frame_style"
                android:text="Hand Sanitizer x 0\n$0.00"
                android:textAlignment="center"
                android:textColor="#00b489"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/listPB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/cancelPC"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/listPA"
                android:layout_below="@+id/listPA"
                android:background="@drawable/frame_style"
                android:text="Deodorant x 0\n$0.00"
                android:textAlignment="center"
                android:textColor="#00b489"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/listPD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cancelPD"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/listPC"
                android:layout_below="@+id/listPC"
                android:background="@drawable/frame_style"
                android:text="Cards x 0\n$0.00"

                android:textAlignment="center"
                android:textColor="#00b489"
                android:textSize="20sp" />

            <Button
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/buttonF"
                android:layout_alignBottom="@+id/buttonF"
                android:layout_alignParentEnd="true"
                android:enabled="false"
                android:text="Send" />

            <TextView
                android:id="@+id/listPC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/productD"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/listPB"
                android:layout_below="@+id/listPB"
                android:background="@drawable/frame_style"
                android:text="Chapstick x 0\n$0.00"
                android:textAlignment="center"
                android:textColor="#00b489"
                android:textSize="20sp" />

            <Button
                android:id="@+id/cancelPA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/sendText"
                android:enabled="true"
                android:text="Cancel A" />

            <Button
                android:id="@+id/cancelPB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/cancelPA"
                android:layout_below="@+id/cancelPA"

                android:enabled="true"
                android:text="Cancel B" />

            <EditText
                android:id="@+id/sendText"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/buttonF"
                android:layout_alignParentStart="true"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="1"
                android:lines="1"
                android:maxLength="20"
                android:maxLines="1"
                android:shadowRadius="1" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/sendButton"
                android:layout_alignParentEnd="true"
                android:onClick="Get_Barcode"
                android:text="Scan Item" />

            <TextView
                android:id="@+id/listcheck"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/cancelPD"
                android:layout_marginTop="15dp"
                android:text="You will pay $0"
                android:textSize="10sp"></TextView>

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/buttonR"
                android:layout_alignTop="@+id/buttonB"
                android:layout_marginTop="11dp"
                android:text="NA"
                android:textColorLink="@android:color/holo_red_light"
                android:textStyle="normal|bold"
                tools:text="No matches" />


            //to this line
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/deviceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/device" />

        <TextView
            android:id="@+id/deviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/deviceLabel"
            android:text="@string/no_device"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/rssival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="_"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

</LinearLayout>