<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="292dp"
        android:layout_weight="4.11"
        android:orientation="vertical">

        <!--<TextView-->
        <!--android:id="@+id/listcheck"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="15dp"-->
        <!--android:layout_alignStart="@+id/btn_select"-->
        <!--android:layout_below="@+id/btn_select"-->
        <!--android:layout_marginTop="45dp"-->
        <!--android:text="Status"-->
        <!--android:textSize="15sp"></TextView>-->

        <EditText
            android:id="@+id/sendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"

            android:layout_marginTop="18dp"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="1"
            android:lines="1"
            android:maxLength="20"
            android:maxLines="1"
            android:shadowRadius="1"
            android:text="Text to be sent to arduino" />

        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sendText"
            android:layout_marginTop="30dp"
            android:enabled="false"
            android:text="Send" />

        <Button
            android:id="@+id/btn_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sendButton"
            android:padding="12dp"
            android:text="Connect" />


        <TextView
            android:id="@+id/countlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBaseline="@+id/sendButton"
            android:layout_alignBottom="@+id/sendButton"
            android:layout_alignStart="@+id/rateofcountlabel"
            android:text="Count :"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rateofcountlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/btn_select"
            android:layout_centerHorizontal="true"
            android:text="Rate of Count :"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rateofcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/rateofcountlabel"
            android:layout_alignBottom="@+id/rateofcountlabel"
            android:layout_alignEnd="@+id/count"
            android:text="rate"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBaseline="@+id/countlabel"
            android:layout_alignBottom="@+id/countlabel"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:text="Number"
            android:textSize="20sp" />

        <ListView
            android:id="@+id/listMessage"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="60dp"></ListView>

        <Button
            android:id="@+id/graph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_select"
            android:layout_marginTop="13dp"
            android:text="History" />

        <TextView
            android:id="@+id/PI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/listMessage"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="23dp"
            android:layout_marginStart="27dp"
            android:text="PI"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/startclock"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text="Time" />

        <Button
            android:id="@+id/startclock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stopclock"
            android:layout_alignBottom="@+id/stopclock"
            android:layout_alignStart="@+id/rateofcountlabel"
            android:text="Start" />

        <Button
            android:id="@+id/stopclock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/graph"
            android:layout_alignBottom="@+id/graph"
            android:layout_toEndOf="@+id/rateofcountlabel"
            android:text="STOP" />

        <TextView
            android:id="@+id/PILabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/PI"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="10dp"
            android:text="Performance Index"
            android:textSize="20sp" />


        <!--<com.jjoe64.graphview.GraphView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="200dip"-->
        <!--android:id="@+id/graph"-->
        <!--android:layout_toEndOf="@+id/sendText"-->
        <!--android:layout_below="@+id/listMessage"-->
        <!--android:layout_alignParentBottom="true" />-->


        //to this line
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/deviceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/device" />

        <TextView
            android:id="@+id/deviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/deviceLabel"
            android:text="@string/no_device"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/rssival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="_"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

</LinearLayout>